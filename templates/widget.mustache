{{!
  @template lytix_timeoverview/widget

  Lytix Timeoverview Widget

  This template renders a stacked bar chart comparing median time spent on different activities.

  Classes required for JS:
  * lytix_timeoverview/timeoverview

  Context variables required for this template:
  See example below.

  Example context (json):
  {
      "contextid": 0,
      "courseid": 0
  }
}}

<div id="timeoverview" class="widget loading">
    <h3>{{#str}} overview_activities, lytix_timeoverview {{/str}}</h3>
    <div class='content d-flex flex-column justify-content-around p-3'></div>
</div>

{{#js}}
    require(['lytix_timeoverview/timeoverview'], function(m) {
        m.init({{contextid}}, {{courseid}});
    });
{{/js}}
